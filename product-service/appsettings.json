{
  "MongoDbSettings": {
    "ConnectionString": "mongodb://mongo:27017",
    "DatabaseName": "ecommerce_db",
    "ProductCollectionName": "products"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topic": "product-events",
    "ProducerSettings": {
      "Acks": "all",
      "EnableIdempotence": true
    }
  },

  "AllowedHosts": "*"
}
